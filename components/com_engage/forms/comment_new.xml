<form addfieldprefix="Akeeba\Component\Engage\Administrator\Field"
      addruleprefix="Akeeba\Component\Engage\Site\Form\Rule"
>
    <fieldset name="basic"
              label="JGLOBAL_FIELDSET_GLOBAL"
    >
        <field name="id"
               type="hidden"
        />

        <field name="parent_id"
               default="0"
               type="hidden"
        />

        <field name="asset_id"
               default="0"
               type="hidden"
        />

        <field name="name"
               type="text"
               label="COM_ENGAGE_COMMENT_FIELD_NAME"
               default=""
               required="false"
               showon="created_by:0"
        />

        <field name="email"
               type="email"
               label="COM_ENGAGE_COMMENT_FIELD_EMAIL"
               default=""
               required="false"
               showon="created_by:0"
        />

        <field name="body"
               type="editor"
               label="COM_ENGAGE_COMMENTS_FILTER_BODY"
               default=""
               id="commentText"
               cols="50"
               rows="5"
               filter="JComponentHelper::filterText"
               buttons="false"
               hiddenLabel="true"
               required="true"
        />

        <field
                name="captcha"
                type="captcha"
                hiddenLabel="true"
                validate="captcha"
        />

        <field
                name="accept_tos"
                type="checkbox"
                label=""
                checked="false"
                filter="boolean"
                required="required"
                validate="tosaccept"
        />

    </fieldset>
</form>